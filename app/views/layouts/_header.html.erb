<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    
    <div class="container">
      
      <%= link_to "StemLoops", root_path, id: "logo" %>
        
      <nav>

        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to current_user.name, current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li><%= link_to "Sign out", signout_path, {:method => "delete"} %> </li>
          <% end %>
          <li><%= link_to "Title page", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <% if current_user.author %> 
            
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Questions", questions_path %></li>
              <li><%= link_to "Elements", elements_path %></li>
              <li><%= link_to "Items", items_path %></li>
              <li><%= link_to "Courses", courses_path %></li>

            <% end %>
             
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
      <h2>
    <% if session[:current_item_id] %>
      Building item <%= session[:current_item_id] %>
    <% end %>
    <% if session[:current_course_id] %>
      Building course <%= session[:current_course_id] %>
    <% end %>
  </h2>
  
    </div>
    
  </div>
</header>

