<% provide(:title, @course.name) %>

<form>
<table class="table">
    <tr>  
        <th>Stage</th>
        <th>Bronze</th>    
        <th>Silver</th>  
        <th>Gold</th>
    </tr>




    <% @content.each do %>
        <%|stage|%>
        <% stage_number=@content.index(stage) %>
        <tr><td> <%=stage_number+1%> </td>
            <td style="vertical-align:middle" width = "100"> <input type="textarea"  name=<%="@content["+stage_number.to_s+"][0]"%> value=<%=stage[0]%> rows="1" cols="20" > </td>
            <td style="vertical-align:middle" width = "100"> <input type="textarea"  name=<%="@content["+stage_number.to_s+"][1]"%> value=<%=stage[0]%> rows="1" cols="20" > </td>
            <td style="vertical-align:middle" width = "100"> <input type="textarea"  name=<%="@content["+stage_number.to_s+"][2]"%> value=<%=stage[0]%> rows="1" cols="20" > </td>
    <% end %>


</table>

<%= link_to "Edit this course", edit_course_path, :id=>params[:id] %>
</form>

   
