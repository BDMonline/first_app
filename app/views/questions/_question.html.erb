<tr>
  <td>
    <%= question.id %>
  </td>
  <td>
    <%= link_to question.name, question %>
  </td>
  <td>  
    <i><%= question.text %></i>
  </td>
  <td>
  <i><%= question.tags %></i>
  </td>
  <td>
    <% if current_user.admin? %>

      <%= link_to "edit", edit_question_path(question.id) %>

      | <%= link_to "delete", question, method: :delete,
                                    data: { confirm: "You sure?" } %>

      <% if session[:current_item_id] %>
      	<% @question=question %>
      	| <%= link_to "add to item", :controller => "questions", :action => "add_to_item", :question => @question.id, :search=>params[:search], :sort=>params[:sort], :direction=>params[:direction] %>
      <% end %>
    <% end %>
  </td>
</tr> 

