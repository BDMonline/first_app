<% provide(:title, @item.name) %>



<div class="row">
  
    <section>
      <h2> <p>
      <% if params[:really]=="yes" %>
      Course: <course><%= Course.find_by_id(Profile.find_by_id(params[:profile_id]).course).name%></course>
      <br> 
      Item: <%= @item.name %>

      <% else %>  
      	Showing Item <%= @item.id%>:  <%= @item.name %> 

      <% end %>

      </h2>

        <%= @item_html.html_safe %>

        <%= hidden_field_tag(:really, params[:really]) %>
        <%= hidden_field_tag(:profile_id, params[:profile_id]) %> 


      <h2>

      <% if params[:really]=="yes" %>
        <%= link_to "Return to course profile page", :controller => "profiles", :action =>"show", :user_id => Profile.find_by_id(params[:profile_id]).user, :course_id => Profile.find_by_id(params[:profile_id]).course %>
      <% else %>
        Content: <%= @item.content %> <p>
        Name: <%= @item.name %> <p>
        
        Tags: <%= @item.tags %> <p>
        
        <%= link_to "Elements index", elements_path %><p>

        <%= link_to "Questions index", questions_path %><p>

        <%= link_to "Edit this item", edit_item_path %>

      <% end %>

      </h2>
    </section>
  
</div>